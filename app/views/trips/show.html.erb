<%= render partial: "shared/navBar" %>
<div class="container">

  <div class="index-container">

    <div>
      <h3>YOUR NEXT TRIP</h3>
      <h2><%= @trip.routes.first.city.name.delete("*") %>, <%= @trip.routes.first.city.state_province.name.delete("*") %> </h2>
      <div id="dates-trip-info">
        <h6><%= @trip.start_date.strftime(" %B %e") %> to <%= @trip.end_date.strftime("%B %e") %></h6>
        <i class="fas fa-edit" data-toggle="modal" data-target="#exampleModal"></i>
      </div>
          <h6>Average_level of your trip :  <%= @average_level %></h6>
      <div id="trip-info">

        <div id="weather"
        class="container"
        data-markers="<%= @markers.to_json %>"
        ></div>
        <% unless @trip.routes.first.nil? %>
          <div class="dates">
              <% if @user == @trip.user%>
              <% end %>
          </div>
          <div id="distance_site" data-site="<%= @site_loc.to_json %>">
          </div>
          <div class="airbnb-image">
            <h6 class="m-0">
            <%= link_to image_tag("https://res.cloudinary.com/dts9y3u9o/image/upload/v1559324820/airbnb_horizontal_lockup_white_print_dpe4zi.jpg"), "https://www.airbnb.ca/s/all?query=#{@trip.routes.first.city.name}", target: :_blank %></h6>
          </div>
        <% end %>
      </div>
      <div class="calendar" id="set-dates-for-trip">
        <% if @user == @trip.user%>
        <%= render 'shared/trip-modal-calendar' %>
        <% elsif (@user != @trip.user && !JointUserTrip.where(trip: @trip).where(user: @user).empty?) %>
          <% current_user.joint_user_trips.where(status: 'pending').each do |jut| %>
            <%= simple_form_for [jut.trip, jut] do |f| %>
              <%= f.submit "Accept", class:"btn btn-outline-success" %>
              <%= f.submit "Refuse", class:"btn btn-outline-danger" %>
            <% end %>
          <% end %>
        <% end %>
      </div>




      <div class='map-card'
        id="map"
        style="width: 100%;
        height: 50vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>

    <div class="tab-content">
      <% count = 1 %>
      <% @routes.each_slice(5).to_a.each do |slice|%>
        <div id="page-<%= count %>" role="tabpanel"  class="tab-pane fade <%= 'show active' if count == 1 %>">
          <% slice.each do |route| %>
            <%= link_to route_path(route) do %>
              <div class="card-route-index">
                <%= image_tag route.photos.first.photo_url unless route.photos.first.nil? || route.photos.first.photo_url.nil? %>
                <div class="card-route-index-info">
                  <h2><%= route.name %></h2>
                  <p>Site :   <%= route.city.name.delete("*") %></p>
                  <p>Level :    <%= route.level %></p>
                  <% rt = RouteTrip.all.select do |route_trips|
                    route_trips.route == route && route_trips.trip == @trip
                  end %>
                  <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, route_trip_path(rt.first), method: :delete, data: { confirm: "Do you want to delete this review?"} %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <% count += 1 %>
      <% end %>
      <%= link_to routes_path do %>
      <%  route = Route.all.sample(1).first %>
        <div class="card-route-index">
          <%= image_tag route.photos.first.photo_url unless route.photos.first.nil? || route.photos.first.photo_url.nil?%>
          <div class="card-route-index-info">
            <h2> Add a new route ! </h2>
          </div>
        </div>
      <% end %>
      <br>
        <% if @user == @trip.user %>
          <button class="button-green" id="validate-trip">Save</button>
          <%= link_to "/profile/#{current_user.id}?profile=true", class: "hidden", id: "save-link" do %>
        <% end %>
      <% end %>

      <h2>Images</h2>

      <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
          <% @routes.each_with_index do |route, index| %>
            <div class="carousel-item <%= "active" if index.zero? %>" style="background-image: url('<%= route.photos.first.photo_url %>');">
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

  </div>
</div>

<div class="container">
  <% @trip.joint_user_trips.each do |jut| %>
    <div class="card">
      <%= jut.status %>
      <%=  jut.user.username %>
    </div>
  <% end %>
</div>

