<div class="card-review" data-review-id="<%= review.id %>">
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-between">
      <%= image_tag review.user.avatar_photo, class: "avatar-reviews" %>
      <div class="review-user">
        <p><%= review.user.username %></p>
        <p><%= time_ago_in_words(review.created_at) %> ago</p>
      </div>
    </div>
    <div>
      <div class="dropdown">
        <%  if review.user == current_user %>
          <%= link_to review_path(review), method: "delete", remote: true, data: { confirm: "Do you want to delete this review?"} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="review-description d-flex justify-content-between align-items-center ">
    <p><%= review.description %></p>
  </div>
  <div>
    <% review.rating.times do %>
      <span>â˜…</span>
    <% end %>
  </div>
</div>

