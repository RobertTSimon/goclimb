<div class="card-review" data-review-id="<%= review.id %>">
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-between">
      <%= image_tag review.user.avatar_photo, class: "avatar-reviews" %>
      <div class="review-user">
        <p><%= review.user.username %></p>
        <p><%= time_ago_in_words(review.created_at) %> ago</p>
      </div>
    </div>
    <div>
      <div class="dropdown">
        <i class="fas fa-ellipsis-v" data-toggle="dropdown"></i>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= link_to "Remove", review_path(review), method: "delete", remote: true, data: { confirm: "Do you want to delete this review?"} if review.user == current_user %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <% review.rating.times do %>
    <span>â˜…</span>
  <% end %>
  </div>
  <div class="review-description">
    <p><%= review.description %></p>
  </div>
</div>

