<%= simple_form_for([ @route, @review ], remote: true) do |form| %>
  <div id="review-form">
    <%= form.input :description, as: :text, label: false, placeholder: 'Write your own review' %>
    <%= form.select :alert, Route::ALERTS %>
    <%= form.submit "Add", class: "button-green" %>
  </div>
<% end %>
