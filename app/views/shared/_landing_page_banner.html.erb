<div id="homepage-banner" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1522163182402-834f871fd851?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1386&q=80);">
  <div>
    <div class="d-flex justify-content-center">
     <%= image_tag "https://res.cloudinary.com/dts9y3u9o/image/upload/v1559328456/GoClimb---final-logo_copy_copy_copy_copy_copy_kvhjzx.png", id: "banner-logo" %>
    </div>
     <h2 class="d-flex justify-content-center">Curated roots for your climbing journey!</h2>
    <h2 class="row justify-content-center typed">
     <span id="banner-typed-text"></span>
    </h2>
    <div class="row justify-content-center" id="search-box">
      <%= form_tag(routes_path, method: :get) do %>
          <%= text_field_tag :query, params[:query], :placeholder => "Search Rumney , 5.10b , crimpy, overhang...", class: "form-control", id: "landing-page-search-form" %>
      <% end %>
    </div>
  </div>
</div>
