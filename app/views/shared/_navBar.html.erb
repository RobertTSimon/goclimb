<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dts9y3u9o/image/upload/v1559227401/GoClimb---final-logo_copy_copy_copy_rqlibd.png", class: "avatar" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="search-form-navbar">
    <%= form_tag(routes_path, method: :get) do %>
        <%= text_field_tag :query, params[:query], :placeholder => "Find Routes!", class: "form-control" %>
    <% end %>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%if user_signed_in? %>
          <div class="nav-div">
            <a class="nav-link" href="#">Welcome, <%= current_user.username %>!</a>
            <a class="nav-link" href="/route/new">Add your route</a>
          </div>
        <% else %>
          <a class="nav-link" href="#">Welcome to GoClimb!</a>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%if user_signed_in? %>
          <%= cl_image_tag current_user.avatar_photo, width: 60, height: 60, crop: :fill, radius: "max", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
           <div class="nav-div">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
           </div>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to profile_path, class: "dropdown-item" do %>
              <i class=“fa fa-sign-out”></i>See your profile
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
              <i class=“fa fa-sign-out”></i>Log out
            <% end %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
