<div id= "home-container">
  <h1>Around you</h1>
  <div class="cards">
    <% @routes.take(9).each do |route|%>
      <%= link_to route_path(route) do %>
        <div class="card-route">
        <%# raise %>
          <%= image_tag route.photos.first.photo_url unless route.photos.first.nil? || route.photos.first.photo_url.nil? %>
          <div class="card-route-info">
            <div>
              <h2><%= route.name %></h2>
              <p><%= route.site.name %> - <%= route.city.name %></p>
              <!-- <p><%= route.city.name %></p> -->
              <p><em><%= route.city.state_province.name %></em></p>
            </div>
            <%= image_tag route.user.avatar_photo, id: "avatar-photo-show-route" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id="home-button">
    <%= link_to "EXPLORE MORE",routes_path, class: "button-green" %>
  </div>
</div>
