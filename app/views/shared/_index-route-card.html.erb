<div class="container">
  <h1>Around you</h1>
  <div class="cards">
    <% @routes.take(9).each do |route|%>
      <%= link_to route_path(route) do %>
        <div class="card-route">
          <%= image_tag route.photos.first.photo %>
          <div class="card-route-info">
            <div>
              <h2><%= route.name %></h2>
              <p><%= route.site.name %></p>
              <p><%= route.city.name %></p>
              <p><%= route.city.state_province.name %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
