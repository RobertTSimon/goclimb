<div class="navbar navbar-expand-sm navbar-light navbar-lewagon-2">
  <%= link_to routes_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dts9y3u9o/image/upload/v1559143682/GoClimb_-_final_logo_t4ny38.jpg", class: "avatar" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent-2">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%if user_signed_in? %>
          <div class="nav-div">
            <a class="nav-link" href="#">Welcome, <%= current_user.username %>!</a>
            <p>Level: <%= current_user.current_level %></p>
          </div>
        <% else %>
          <a class="nav-link" href="#">Welcome to GoClimb</a>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%if user_signed_in? %>
          <%= cl_image_tag current_user.avatar_photo, width: 40, height: 40, crop: :fill, radius: "max", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
           <div class="nav-div">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
           </div>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to user_path(:id), class: "dropdown-item" do %>
              <i class=“fa fa-sign-out”></i>Level: <%= current_user.current_level %>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
              <i class=“fa fa-sign-out”></i>Log out
            <% end %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
