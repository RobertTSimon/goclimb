<div class="navbar navbar-expand-sm navbar-light navbar-lewagon-2">
  <div class="collapse navbar-collapse" id="navbarSupportedContent-2">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%if user_signed_in? %>
          <div class="nav-div-landing-page">
            <%= link_to "Welcome, #{current_user.username}", profile_path(current_user.id), class: "nav-link-landing-page"%>
            <span class="nav-link-landing-page">Level: <%= current_user.current_level %></span>  
        </div>
        <% else %>
          <a class="nav-link" href="#">Welcome to GoClimb</a>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%if user_signed_in? %>
          <%= cl_image_tag current_user.avatar_photo, width: 60, height: 60, crop: :fill, radius: "max", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
           <div class="nav-div-landing-page">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
           </div>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
          <%= link_to profile_path(current_user.id), class: 'dropdown-item' do %>
              <i class=“fa fa-sign-out”></i>Your profile
              <% end %>
              <%= link_to trip_path(current_user.id), class: 'dropdown-item' do %>
              <i class=“fa fa-sign-out”></i>Your trips
              <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
              <i class=“fa fa-sign-out”></i>Log out
            <% end %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
