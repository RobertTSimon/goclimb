<% @list_routes.each do |route|%>
  <%= link_to route_path(route) do %>
    <div class="card-route-index">
      <%= image_tag route.photos.first.photo_url unless route.photos.first.nil? || route.photos.first.photo_url.nil? %>
      <div class="card-route-index-info">
        <h2><%= route.name %></h2>
        <p>Site : <%= route.city&.name.delete("*") unless route.city.nil? %></p>
        <p>Level : <%= route.level %></p>
        <div class="photo-suggestions-div">
          <%= image_tag route.user.avatar_photo, id: "avatar-photo-suggestions" %>
          <p><%= route.user.username %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="pagination-container">
  <div class = "pagination">
    <% if @current_page == 0 && @list_routes.count < 5%>
      <a data-remote="true" id="current-page" href="<%= @current_page_link %>"><%= @current_page  %></a>
    <% elsif @current_page == 0%>
      <a data-remote="true" href="<% @current_page_link %>"> < </a>
      <a data-remote="true" href="<%= @current_page_link %>" id="current-page"><%= @current_page  %></a>
      <% unless @the_end %>
        <a data-remote="true" href="<%= @next_page %>"><%= @current_page + 1 %></a>
        <a data-remote="true" href="<%= @current_page_plus2 %>"><%= @current_page +2 %></a>
        <a data-remote="true" href="<%= @next_page %>"> > </a>
      <% end %>
    <% else %>
      <a data-remote="true" href="<%= @previous_page  %>"> < </a>
        <a data-remote="true" href="<%= @previous_page  %>"><%= @current_page -1 %></a>
        <a data-remote="true" href="<%= @current_page_link %>" id="current-page"><%= @current_page  %></a>
      <% unless @the_end %>
        <a data-remote="true" href="<%= @next_page %>"><%= @current_page + 1 %></a>
        <a data-remote="true" href="<%= @next_page %>"> > </a>
      <% end %>
    <% end %>
  </div>
</div>
