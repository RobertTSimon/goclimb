<%= render partial: 'shared/navBar' %>
<div class="full-height">
  <div class="form-card">
    <h1>Create a new Route</h1>
    <%= simple_form_for @route do |f| %>
      <%= f.input :name, label: false, placeholder: 'Route Name' %>
      <%= f.input :city, label: false, placeholder: 'location' %>
      <%= f.input :description, label: false, placeholder: 'Description' %>

      <%= f.submit "Create", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
