<div class="full-height">
  <div class="form-card">
    <h1>Edit</h1>
    <%= simple_form_for @route do |f| %>
      <%= f.input :name, label: false, placeholder: 'Route Name' %>
      <%= f.input :description, label: false, placeholder: 'Description' %>
      <%= f.fields_for :photos do |p| %>
        <div class="field">
          <%= p.label :photo %><br>
          <%= p.file_field :photo, :multiple => true, name: "photos[photo][]" %>
          <%= p.hidden_field :photo_cache %>
        </div>
      <% end %>

      <%= f.input :latitude, label: false, placeholder: 'Latitude' %>
      <%= f.input :longitude, label: false, placeholder: 'Longitude' %>
      <%= f.input :type_of, label: false, placeholder: 'Type' %>
      <%= f.input :style, label: false, placeholder: 'Style' %>
      <%= f.input :level, label: false, placeholder: 'Level' %>

      <%= f.submit "Change", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
