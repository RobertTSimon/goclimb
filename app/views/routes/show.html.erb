<h1>Routes#show</h1>
<p>Find me in app/views/routes/show.html.erb</p>


<div class="container review-card">
    <div id="reviews">
      <% unless @route.user == current_user %>
        <% if @route.reviews.blank? %>
            Be the first to leave a review for <%= @route.name %>
        <% else %>
          <% @route.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
          <% end %>
          <%= render 'reviews/form', route: @route, review: @review %>
        <% end %>

      <% else %>

        <% if @route.reviews.blank? %>
          No rewiew on your <%= @route.name %> yet
        <% else %>
          Here are all the reviews for your <%= @route.name %>
          <% @route.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>



