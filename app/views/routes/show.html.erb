<div class="container review-card">
  <div id="reviews">
    <% if @route.reviews.blank? %>
        Be the first to leave a review for <%= @route.name %>
    <% else %>
      <% @route.reviews.each do |review| %>
        <%= render 'reviews/show', review: review %>
      <% end %>
    <% end %>
    <%= render 'reviews/form', route: @route, review: @review %>
  </div>

  <div id="weather"
  class="container"
    data-markers="<%= @markers.to_json %>"
  ></div>
  <div id="geo">

  <div class="map-card"
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>




